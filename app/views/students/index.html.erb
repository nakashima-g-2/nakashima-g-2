<h1>生徒一覧</h1>

<table class="table table-striped table-bordrerd">
 
  <tr>
    <td>学籍番号</td>
    <td>名前</td>
    <td>部活</td>
  </tr>
  
  <% @students.each do|student| %>
    <tr>
        <td><%= student.student_no %></td>
        <td><%= student.name %></td>
        <td><%= student.club.try(:name) %></td>
    </tr>
  <% end %>

</table>
<br>

<%= paginate @students %>

<p style="text-align:center"><%= link_to '新規登録', new_student_path, class: "btn btn-primary" %></p>
<p style="text-align:center"><%= link_to 'トップに戻る', root_url, class: "btn btn-primary" %></p>
